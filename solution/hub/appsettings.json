{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=WebApiDb;Username=postgres;Password=your_password"
  },
  "Jwt": {
    "SecretKey": "your-256-bit-secret-key-here-must-be-at-least-32-characters-long",
    "Issuer": "WebApi",
    "Audience": "WebApiUsers",
    "ExpirationMinutes": "60"
  },
  "FileStorage": {
    "UploadPath": "/app/shared"
  },
  "Cors": {
    "AllowedOrigins": []
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "AutoMigrate": false,
    "EnsureCreated": false
  }
}
